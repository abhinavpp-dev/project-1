<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/adminpanelheader') %>
    <link rel="stylesheet" href="/css/slidermanagement.css">
    <link rel="stylesheet" href="/css/admindash.css">
</head>
<body>

    <div class="container">
        <%- include('../partials/adminnavbar') %>

        <!-- Slider Management Section -->
        <div class="slider-management">
            <h2>Manage Sliders</h2>
            <% if (sliders.length > 0) { %>
                <table class="slider-table">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Subtitle</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% sliders.forEach(slider => { %>
                            <tr>
                                <td><%= slider.title %></td>
                                <td><%= slider.subtitle %></td>
                                <td>
                                    
                                    <form action="/update-slider/<%= slider._id %>" method="GET" style="display:inline;">
                                        <button type="submit" class="update-btn">Update</button>
                                    </form>
                                    <form action="/delete-slider/<%= slider._id %>" method="POST" style="display:inline;">
                                        <button type="submit" class="delete-btn">Delete</button>
                                    </form>
                                    
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            <% } else { %>
                <p class="no-sliders-message">No sliders available to display.</p>
            <% } %>
        </div>

    </div>

</body>
</html>
