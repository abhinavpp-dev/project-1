<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/header') %>
  <title>Cash on Delivery</title>
  <link rel="stylesheet" href="/css/cod.css">
</head>
<body>
  


  <!-- end breadcrumb section -->

  <!-- COD section -->
  <div class="cod-section">
    <div class="container">
      <div class="row">
        <!-- User Details -->
        <div class="col-md-7">
          <h4>User Details</h4>
          <div class="user-details">
            <p><strong>Full Name:</strong> <%= order.name %></p>
            <p><strong>Address:</strong> <%= order.address %></p>
            <p><strong>City:</strong> <%= order.city %></p>
            <p><strong>Phone Number:</strong> <%= order.phone %></p>
          </div>
        </div>

        <!-- Product Details -->
        <div class="col-md-5">
          <h4>Order Summary</h4>
          <table class="order-table">
            <thead>
              <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Total</th>
              </tr>
            </thead>
            <tbody>
              <% order.items.forEach(item => { %>
                <tr>
                  <td><%= item.product.name %></td>
                  <td><%= item.quantity %></td>
                  <td><%= item.price %></td>
                </tr>
              <% }) %>
            </tbody>
            <tfoot>
              <tr>
                <th colspan="2">Subtotal</th>
                <th>₹<%= order.totalAmount.toFixed(2) %></th>
              </tr>

              <tr>
                <th colspan="2">Total</th>
                <th>₹<%= order.totalAmount.toFixed(2) %></th>
              </tr>
            </tfoot>
          </table>
        </div>
      </div>

      <div class="row mt-4">
        <div class="col-12 text-center">
          <p>Thank you for choosing Cash on Delivery. Your order will be delivered to the specified address.</p>
          <a href="/" class="boxed-btn">Continue Shopping</a>
        </div>
      </div>
    </div>
  </div>
  <!-- end COD section -->

  
  <%- include('../partials/script') %>
</body>
</html>
